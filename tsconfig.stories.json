{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "ES2018",
      "ES2019",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "removeComments": true,
    "downlevelIteration": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.scss$",
          "classnameTransform": "camelCase"
        }
      }
    ],
    "rootDir": "./"
  },
  "include": [
    "src/**/*",
    "stories/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "rollup.config.js"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/@types/"
  ]
}